  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= auto_discovery_link_tag :rss, "/feed" %>
</head>
<body>

<div class="container">

	<p>
 	 <% if mobile_device? %>
   	 	<%= link_to "Full Site", :mobile => 0 %>
 	 <% else %>
	    <%= link_to "Mobile Site", :mobile => 1 %>
  	 <% end %>
	</p>
	<%= yield %>

	<!--<%= debug(params) if Rails.env.development? %>-->
</div>

</body>
</html>
