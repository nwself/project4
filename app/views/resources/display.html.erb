<% @rels.each do |rel| %>
  <tr>
    <td><%= Resource.find(rel.id).content %></td>
    <td><%= Resource.find(rel.id).permissions %></td>
    <td><%= link_to 'View', Resource.find(rel.id) %></td>
    <td><%= link_to 'Edit', edit_resource_path(Resource.find(rel.id)) %></td>
