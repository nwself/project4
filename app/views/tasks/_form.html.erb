<%= form_for([@project, @task]) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %> 
  </div>
 <% if @is_admin %> 
   <div class="field">
    <%= f.label :assigned_to %><br />
  	<%= f.collection_select :task_or_bug, @project.users, :id, :username %>
  <% end %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.select :status, ["Select","Open","Inprogress","Complete"] %>
  </div>
  <div class="field">
    <%= f.label :priority %><br />
    <%= f.select :priority, ["Select","High","Medium","Low"] %>
  </div>
  <div class="field">
    <%= f.label :percentage_completed %><br />
    <%= f.text_field :percentage_completed %>
  </div>
  <div class="field">
    <%= f.label :due_date %><br />
    <%= f.date_select :due_date %>
  </div>
  <div class="field">
    <%= f.label :estimated_date %><br />
    <%= f.date_select :estimated_date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
