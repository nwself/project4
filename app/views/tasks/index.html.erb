<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Task or bug</th>
    <th>Status</th>
    <th>Priority</th>
    <th>Percentage completed</th>
    <th>Due date</th>
    <th>Estimated date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @project.tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.task_or_bug %></td>
    <td><%= task.status %></td>
    <td><%= task.priority %></td>
    <td><%= task.percentage_completed %></td>
    <td><%= task.due_date %></td>
    <td><%= task.estimated_date %></td>
    <td><%= link_to 'Show', [@project,task] %></td>
    <td><%= link_to 'Edit', edit_project_task_path(@project,task) %></td>
    <td><%= link_to 'Destroy', [@project,task] , method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

