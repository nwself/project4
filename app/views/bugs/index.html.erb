<h1>Listing bugs</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Task or bug</th>
    <th>Status</th>
    <th>Priority</th>
    <th>Percentage completed</th>
    <th>Due date</th>
    <th>Estimated date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @project.bugs.each do |bug| %>
  <tr>
    <td><%= bug.title %></td>
    <td><%= bug.task_or_bug %></td>
    <td><%= bug.status %></td>
    <td><%= bug.priority %></td>
    <td><%= bug.percentage_completed %></td>
    <td><%= bug.due_date %></td>
    <td><%= bug.estimated_date %></td>
    <td><%= link_to 'Show', [@project,bug] %></td>
    <td><%= link_to 'Edit', edit_project_bug_path(@project,bug) %></td>
    <td><%= link_to 'Destroy', [@project,bug], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

