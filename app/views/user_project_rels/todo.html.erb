
<% current_user.projects.each do |project| %>

<h1>
<h2>
  <%= link_to project.name, "projects/#{project.id}"  %>  
  (<%= role = project.user_project_rels.find_by_user_id(current_user).role %>)
</h1>
</h2>

<h2>Tasks</h2>
<h3>Tasks</h3>

<table class="table table-striped">
<table id="todo">
  <tr>
    <th>Title</th>
    <th>Status</th>
    <th>Priority</th>
    <th>Percentage completed</th>
    <th>Due date</th>
    <th>Estimated date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% project.tasks.where("user_project_rels.role='"+role+"'").each do |task| %>
  <tr>
  	<td><%= link_to task.title, [project,task] %></td>
    <td><%= task.status %></td>
    <td><%= task.priority %></td>
    <td><%= task.percentage_completed %></td>
    <td><%= task.due_date %></td>
    <td><%= task.estimated_date %></td>
    <%if !(role=="Client") %>
    <td><%= link_to 'Edit', edit_project_task_path(project,task) %></td>
    <%end%>
    <%if role=="Administrator" %>
    <td><%= link_to 'Destroy', [project,task] , method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <%else%>
    <td/>
    <%end%>
  </tr>
<% end %>
</table>

<br />
<%if role=="Administrator" %>
<%=image_tag("add.jpeg", :height=>"10px", :width=>"10px")%>
<%= link_to   'New Task', new_project_task_path(project) %>
<%end%>
